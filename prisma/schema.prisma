generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model MovieType {
  id   String @id @default(uuid())
  name String @unique
}

model Genre {
  id   String @id @default(uuid())
  name String @unique
}

model Movie {
  id         String @id @default(uuid())
  imdbId     String @unique
  title      String
  year       String
  genre      String
  poster     String
  runtime    String
  director   String
  plot       String
  imdbRating String
  imdbVotes  String
  metascore  String
}
